{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "make",
      "args": ["debug"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PREFIX": "${workspaceFolder}/.local",
          "PATH": "${workspaceFolder}/dist/bin:${env:PATH}",
          "BUILD_TYPE": "Debug"
        },
        "shell": {
          "executable": "bash",
          "args": ["-c"]
        }
      }
    }
  ]
}
